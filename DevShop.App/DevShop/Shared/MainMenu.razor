@inject TokenProvider _tokenProvider



<div>
    <ul>
        <li>
            <AuthorizeView>
                <Authorized>
                    <form method="post" action="/logout">
                        <input type="hidden" name="__RequestVerificationToken" value="@_tokenProvider.AntiForgeryToken">
                        <input type="submit" value="logout">
                    </form>
                </Authorized>
                <NotAuthorized>
                    <a href="./login">
                        Login
                    </a>
                </NotAuthorized>
            </AuthorizeView>
        </li>
    </ul>
</div>