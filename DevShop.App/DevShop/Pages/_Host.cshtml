@page "/"
@namespace DevShop.Pages
@using DevShop.Authentication
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery _forgery;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers



@{
    Layout = "_Layout";

    // Set the AntiForgeryToken
    var appInitialState = new ApplicationInitialState
    {
        AntiForgeryToken = _forgery.GetAndStoreTokens(HttpContext).RequestToken
    };
}



<component type="typeof(App)" param-InitialState="@appInitialState" render-mode="ServerPrerendered" />
